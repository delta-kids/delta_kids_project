  <h1>TAGS</h1>
<!-- ================== -->

<!-- REGISTRATION -->
  <div class="form-group">
    <%= f.label :event_cost %>
    <%= radio_button_tag(:event_cost, "Free") %>
    <%= label_tag(:cost, "Free") %>
    <%= radio_button_tag(:event_cost, "Paid") %>
    <%= label_tag(:cost, "Paid") %>
  </div>

<!-- EVENT DESCRIPTION -->
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

<!-- MORE INFO , LINKS  -->
