
<%= image_tag "filter-header.svg", class: " filter-header-img"  %>
<br>
<br>
<div class="">
  <%= form_tag("/map#results", method: :get) do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search", :name => nil, class:'btn-primary' %>
  <br>
  <br>
  <div class="form-group">
    <%= label_tag  "by_start_date", "Start Date" %>
    <%= text_field_tag "by_start_date",Date.current(), placeholder: "YYYY/MM/DD", class: 'datepicker form date-time-width form-padding', id:"mob-map-start" %>
    <br>
    <%= label_tag  "by_end_date", "End Date", style:"padding-right:6px;" %>
    <%= text_field_tag "by_end_date",Date.current() + 1.month, placeholder: "YYYY/MM/DD", class: 'datepicker form form-padding date-time-width', id:"mob-map-end" %>
  </div>
</div>
<br>
<div class="filterCard">
