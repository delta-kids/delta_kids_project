                    <% end %>

                    <a href="<%= new_event_path %>" class="about-us"><button type="button" href="<%= new_resource_path %>" class="button-seemore">Add an Event</button></a>

                    <a href="<%= new_resource_path %>" class="about-us"><button type="button" href="<%= new_resource_path %>" class="button-seemore">Add a Resource</button></a>
                <% else %>
                    <div>
                      <p>
                        Dashboard section is meant to publish a Resource and/or Event. In order to proceed you must have an account with us. Please Log In or create a New User.
                        <br>
                        <div class="">
                          <!-- <%= link_to 'New User', signup_path, class: 'top-right-panel' %>&nbsp -->
                          <a href="<%= signup_path %>" class="top-right-panel">New User</a>&nbsp
                          <a href="<%= login_path %>" class="top-right-panel">Log In</a>&nbsp
                        </div>
                        <!-- <div class="">
                          <%= link_to 'Log In', login_path, class: 'top-right-panel' %>&nbsp
                        </div> -->
                      </p>
                      <br>
                      <p>
                        If you don't want to proceed, please feel free to go elsewhere in our site.
                      </p>
                    </div>
                    <!-- change sign up to New User -->

                <% end %>

              </div>
            </div>
            <div class="col-md-2">

            </div>


        </div>
    </div>
